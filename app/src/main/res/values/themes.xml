<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjetoAppLoja" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryVariant">@color/primaria_variacao</item>
        <item name="colorOnPrimary">@color/terceira</item>
        <item name="colorSecondary">@color/secundaria</item>
        <item name="colorSecondaryVariant">@color/secundaria_variacao</item>
        <item name="colorOnSecondary">@color/terceira</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflowButton</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="popupMenuBackground">@color/black</item>
        <item name="android:actionOverflowMenuStyle">@color/primaria</item>



    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primaria</item>
    </style>

    <style name="ActionOverflowButton"
        parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.ProjetoAppLoja" parent="Base.Theme.ProjetoAppLoja" />
</resources>